{
  "schemaVersion": 1,
  "id": "ppl_utils",
  "version": "${version}",
  "name": "Pepeland Utils",
  "description": "Mod which provides some useful features for Pepeland players",
  "authors": ["bleudev"],
  "contact": {
    "homepage": "https://modrinth.com/mod/ppl_utils",
    "sources": "https://github.com/bleudev/ppl_utils.git",
    "issues": "https://github.com/bleudev/ppl_utils/issues"
  },
  "license": "MIT",
  "icon": "assets/ppl_utils/icon.png",
  "environment": "client",
  "custom": {
    "mcb": [
      {
        "name": "Pepeland",
        "labelColor": -1,
        "fillColor": -15252711,
        "outlineColor": -14850017
      }
    ]
  },
  "entrypoints": {
    "client": [
      "com.bleudev.ppl_utils.PepelandUtils"
    ],
    "modmenu": [
      "com.bleudev.ppl_utils.compat.modmenu.ModMenuCompat"
    ]
  },
  "mixins": [
    "ppl_utils.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric": ">=${fabric_version}",
    "minecraft": ">=${minecraft_version} <${max_exclusive_minecraft_version}",
    "midnightlib": ">=${midnightLib_version}"
  },
  "suggests": {
    "modmenu": ">=${modMenu_version}",
    "modmenu-badges-lib": ">=${modMenuBadges_version}"
  }
}
